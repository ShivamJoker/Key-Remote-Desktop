{
  "name": "Keymote",
  "version": "0.1.0",
  "description": "Control your keyboard easily from anywhere in the world",
  "main": "index.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "all": "electron-builder -mwl",
    "dist": "electron-builder",
    "start": "electron ."
  },
  "keywords": [],
  "author": "Shivam",
  "license": "ISC",
  "devDependencies": {
    "asar": "^2.1.0",
    "electron": "^8.0.2",
    "electron-builder": "^22.3.2",
    "electron-rebuild": "^1.10.0"
  },
  "dependencies": {
    "ip": "^1.1.5",
    "robotjs": "^0.6.0",
    "ws": "^7.2.1"
  },
  "build": {
    "appId": "com.keymote",
    "productName": "Keymote",
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],

    "copyright": "â’¸2020 CreativeJE",
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 220,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 350
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": "squirrel",
      "icon": "build/icon.png"
    },
    "mac": {
      "category": "public.app-category.utilities"
    }
  }
}
